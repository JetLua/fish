{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["./*"],
    },
    "lib": [
      "dom",
      "esnext",
    ],
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
